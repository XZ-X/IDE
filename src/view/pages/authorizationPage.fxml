<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.pages.AuthorizationPageController">
   <children>
      <TextField fx:id="IDText" layoutX="35.0" layoutY="34.0" onKeyReleased="#changeUser" prefHeight="27.0" prefWidth="265.0" promptText="Your ID here" />
      <Button fx:id="getQuestionButton" layoutX="348.0" layoutY="34.0" mnemonicParsing="false" onAction="#setGetQuestionButtonClicked" prefHeight="27.0" prefWidth="196.0" text="Get your security question" />
      <TextField fx:id="answer" layoutX="35.0" layoutY="230.0" onAction="#clearButton" prefHeight="27.0" prefWidth="265.0" promptText="Your answer here" />
      <Button fx:id="OKButton" layoutX="341.0" layoutY="280.0" mnemonicParsing="false" onAction="#onOKClicked" prefHeight="27.0" prefWidth="196.0" text="OK" />
      <TextArea fx:id="questionText" editable="false" layoutX="35.0" layoutY="115.0" prefHeight="85.0" prefWidth="265.0" />
      <PasswordField fx:id="newPassword" layoutX="35.0" layoutY="280.0" onAction="#clearButton" prefHeight="27.0" prefWidth="265.0" promptText="New Password" />
      <PasswordField fx:id="newPasswordAgain" layoutX="35.0" layoutY="334.0" onAction="#clearButton" prefHeight="27.0" prefWidth="265.0" promptText="New Password Again" />
   </children>
</AnchorPane>
